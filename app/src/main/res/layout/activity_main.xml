<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#32DA25"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Поиск товара" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rounded"
                android:dropDownAnchor="@+id/button"
                android:hint="ПОИСК"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"


        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:background="#FBFBFB"
            app:itemIconTint="@color/black"
            app:itemTextColor="#2ACF31"
            app:menu="@menu/navigation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCentre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/llNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="110dp"
                    android:layout_margin="2dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded2"
                    app:srcCompat="@drawable/garden" />
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="110dp"
                    android:layout_margin="2dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded2"
                    app:srcCompat="@drawable/light" />
                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="110dp"
                    android:layout_margin="2dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded2"
                    app:srcCompat="@drawable/tools" />
                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="110dp"
                    android:layout_margin="2dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded2"
                    app:srcCompat="@drawable/res" />
                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="110dp"
                    android:layout_margin="2dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded2"
                    app:srcCompat="@drawable/decor" />

            </LinearLayout>
            />
        </HorizontalScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>